<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/main"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/bg"
              android:layout_margin="5dp"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/class_imv"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher"/>
    <LinearLayout
        android:id="@+id/class_edit_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_alignParentRight="true"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        >

        <TextView
            android:id="@+id/class_undo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8dp"
            android:background="@color/green"
            android:text="@string/mow_cancel"/>
        <TextView
            android:id="@+id/class_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit"
            android:padding="8dp"
            android:background="@color/mow_text_yellow_color"
            />

        <TextView
            android:id="@+id/class_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/delete"
            android:padding="8dp"
            android:background="@color/red"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/class_name"
        android:layout_below="@id/class_imv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="课程名称"/>

    <TextView
        android:id="@+id/class_free"
        android:layout_below="@+id/class_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="免费"
        android:layout_marginBottom="10dp"
        android:textColor="@color/colorPrimary"
        android:textSize="12sp"/>
</RelativeLayout>